@using Bakery.Models;

@{
  Layout = "_Layout";
}
<h3>Here are all the orders this vendor has placed:</h3>

<div class="orders">
    @if (@Model.Count == 0)
    {
      <h3>There are no orders currently</h3>
    }
<ol> 
      @foreach (Order order in @Model["orders"])
      {
        <li><a href='/vendors/@Model["vendor"].VendorId/orders/@order.OrderId'>@order.OrderTitle</a></li>
      }
</ol> 
<p><a href='/vendors/@Model["vendor"].VendorId/orders/new'>Add a new Order</a></p> 
<h4><a href="/vendors">Vendors Page</a></h4>
<h4><a href="/">Phone Home!</a></h4>
</div>