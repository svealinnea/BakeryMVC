@using Bakery.Models;

@{
  Layout = "_Layout";
}
<div class="container">
  <h4>Orders:</h4>
</div>

@if (@Model.Count == 0)
{
  <p>No orders have been placed, sorry!</p>
}

@foreach (Order order in Model)
{
  <li><a href='/vendors/@Model["vendor"].VendorId/orders/@order.OrderId'>@order.OrderTitle</a></li>
}
