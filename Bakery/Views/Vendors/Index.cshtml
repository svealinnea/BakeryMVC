@using Bakery.Models;
@{
  Layout = "_Layout";
}

<h1>Here is the Vendor List:</h1>

@if (Model.Count == 0)
{
  <p>No vendors have been added yet!</p>
}
@foreach (Vendor vendor in Model)
{
  <h3><a href="/vendors/@vendor.VendorId/orders">@vendor.VendorName</a></h3>
  <p>Description: @vendor.VendorDescription</p>
}
<a href='/vendors/new'>Add a new vendor</a> 
<p><a href='/'>Back home</a></p>