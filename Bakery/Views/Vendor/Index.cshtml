@using Bakery.Models;
@{
  Layout = "_Layout";
}

<h1>Here is the Vendor List:</h1>

@if (Model.Count == 0)
{
  <p>No vendors have been added yet!</p>
}
@foreach (Vendor vendor in Model)
{
  <p><a href="/vendors/@vendor.Id">@vendor.VendorName</a></p>
}
<a href="/vendors/new">Add a new vendor</a> 
<p><a href='/'>Back home</a></p>